@{
    Layout = "_Layout";
}

@using SweetTreat.Models
@model IEnumerable<Flavor>

<div class="container">
    <h1 class="my-4">Flavors</h1>

    @if (Model.Count() == 0)
    {
        <h3>No flavors have been added yet!</h3>
    }
    else
    {
        <ul class="list-group mb-4">
            @foreach (Flavor flavor in Model)
            {
                <li class="list-group-item">
                    <div class="flavor-item">
                        <div class="flavor-name">@Html.ActionLink($"{flavor.FlavorName}", "Details", new { id = flavor.FlavorId }, new { @class = "flavor-link" })</div>
                    </div>
                </li>
            }
        </ul>
    }

    <div class="button-container">
        <p>@Html.ActionLink("Add a new tasty flavor!", "Create", "Flavors", null, new { @class = "btn btn-primary" })</p>
        <p>@Html.ActionLink("Or add a treat", "Index", "Treats", null, new { @class = "btn btn-secondary" })</p>
        <p>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-secondary" })</p>
    </div>
</div>
