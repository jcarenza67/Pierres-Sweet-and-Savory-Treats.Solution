@model SweetTreat.Models.Flavor
@{
    Layout = "_Layout";
}

<div class="container">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Create New Flavor</h2>

            @using (Html.BeginForm())
            {
                <div class="form-group">
                    <label for="FlavorName">Flavor Name:</label>
                    @Html.EditorFor(model => model.FlavorName, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.FlavorName, "", new { @class = "text-danger" })
                </div>

                <br>
                <input type="submit" value="Create" class="btn btn-primary" />
            }

            <p class="mt-3">
                @Html.ActionLink("Back to Flavor list", "Index", "Flavors", null, new { @class = "btn btn-secondary" })
            </p>
        </div>
    </div>
</div>
