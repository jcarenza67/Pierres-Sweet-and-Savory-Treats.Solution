@{
    Layout = "_Layout";
}

@using SweetTreat.Models
@model IEnumerable<Treat>

<div class="container">
  <h1 class="my-4">Treats</h1>

  @if (Model.Count() == 0)
  {
    <h3>No Treats have been added yet!</h3>
  }

  <ul class="list-group mb-4">
    @foreach (Treat treat in Model)
    {
      <li class="list-group-item">
        @Html.ActionLink($"{treat.TreatName}", "Details", new { id = treat.TreatId }, new { @class = "treat-link" })
      </li>
    }
  </ul>

  <p>@Html.ActionLink("Add a new tasty treat!", "Create", "Treats", null, new { @class = "btn btn-primary mb-2" })</p>
  <p>@Html.ActionLink("Or add a flavor", "Index", "Flavors", null, new { @class = "btn btn-secondary" })</p>
  <p>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-secondary" })</p>
</div>