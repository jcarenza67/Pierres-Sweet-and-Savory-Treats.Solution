@{
    Layout = "_Layout";
}

@model SweetTreat.Models.Treat

<div class="container">
    <h2>Add a Flavor</h2>

    <form method="post" class="form">
        @Html.HiddenFor(model => model.TreatId)

        <div class="form-group">
            <label for="FlavorId">Flavor</label>
            @Html.DropDownList("FlavorId", null, "-- Select Flavor --", new { @class = "form-control" })
        </div>
        <br>
        <button type="submit" class="btn btn-primary">Add</button>
    </form>

    <div class="mt-3">
        @Html.ActionLink("Back to List", "Index", "Treats", null, new { @class = "btn btn-secondary" })
    </div>
    <br>
    <div>
      @Html.ActionLink("Click if no flavors", "Create", "Flavors", null, new { @class = "btn btn-success" })
    </div>
</div>
