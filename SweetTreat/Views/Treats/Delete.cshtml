@{
  Layout = "_Layout";
}

@model SweetTreat.Models.Treat

<div class="container">
  <div class="card">
    <div class="card-body">
      <h2 class="card-title">Are you sure you want to delete this treat?</h2>

      <div class="form-group">
        <label for="TreatName">Treat:</label>
        <p class="card-text"> @Html.DisplayFor(model => model.TreatName)</p>
      </div>
      <div class="form-group">
        <label for="TreatDescription">Description:</label>
        <p class="card-text"> @Html.DisplayFor(model => model.TreatDescription)</p>
      </div>

      @using (Html.BeginForm())
      {
        <br>
        <input type="submit" value="Delete" class="btn btn-danger" />
      }
      
      <p class="mt-3">
        @Html.ActionLink("Back to Treat list", "Index", "Treats", null, new { @class = "btn btn-primary" })
      </p>
    </div>
  </div>
</div>
