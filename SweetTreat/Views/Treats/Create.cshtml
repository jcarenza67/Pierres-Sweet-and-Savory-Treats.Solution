@model SweetTreat.Models.Treat
@{
    Layout = "_Layout";
}

<div class="container">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Create New Treat</h2>

            @using (Html.BeginForm())
            {
                <div class="form-group">
                    <label for="TreatName">Treat Name:</label>
                    @Html.EditorFor(model => model.TreatName, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.TreatName, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label for="TreatDescription">Treat Description:</label>
                    @Html.EditorFor(model => model.TreatDescription, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <br>
                <input type="submit" value="Create" class="btn btn-primary" />
            }

            <p class="mt-3">
                @Html.ActionLink("Back to Treat list", "Index", "Treats", null, new { @class = "btn btn-secondary" })
            </p>
        </div>
    </div>
</div>
